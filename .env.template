# KRAKEN TRADING EXTENSIONS - API KEYS
# Copy this file to .env and fill in your actual API keys

# ===========================================
# KRAKEN EXCHANGE API (Primary Trading)
# ===========================================
# Get from: https://www.kraken.com/u/security/api
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET=your_kraken_secret_key_here

# ===========================================
# TIINGO API (Technical Analysis)  
# ===========================================
# Get free API key from: https://www.tiingo.com/
TIINGO_API_KEY=your_tiingo_api_key_here

# ===========================================
# FINANCIAL DATASETS API (Market Data)
# ===========================================
# Get from: https://financialdatasets.ai/
FINANCIAL_DATASETS_API_KEY=your_financial_datasets_api_key_here

# ===========================================
# ADDITIONAL EXCHANGE APIS (Optional)
# ===========================================
# For multi-exchange arbitrage opportunities
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET=your_binance_secret_here

COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET=your_coinbase_secret_here

# ===========================================
# TRADING CONFIGURATION
# ===========================================
DEFAULT_EXCHANGE=kraken
DEFAULT_MARKET_TYPE=spot
ENABLE_ARBITRAGE=true
MAX_POSITION_SIZE=0.1
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=1.5

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================
USE_PROXY=false
PROXY_URL=
LOG_LEVEL=INFO
