# SaaS Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=sqlite+aiosqlite:///./saas_platform.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost/saas_db

# Security
SECRET_KEY=your-secret-key-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
ALLOWED_HOSTS=localhost,127.0.0.1

# Stripe Payment Processing
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cryptocurrency Payments
CRYPTO_PAYMENT_ENABLED=false
BTC_WALLET_ADDRESS=your_btc_wallet_address
ETH_WALLET_ADDRESS=your_eth_wallet_address

# Trading Bot Integration
TRADING_BOT_API_URL=http://localhost:8001
TRADING_BOT_API_KEY=your_trading_bot_api_key

# Rate Limiting
RATE_LIMIT_ENABLED=true
DEFAULT_RATE_LIMIT=100/minute

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
FROM_EMAIL=noreply@cryptotradingbot.com

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# Redis Cache
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Monitoring
SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO

# Pricing (in cents)
PRO_TIER_PRICE=9900
ENTERPRISE_TIER_PRICE=99900
WHITE_LABEL_BASE_PRICE=1000000

# Strategy Marketplace
MARKETPLACE_COMMISSION=0.30
MIN_STRATEGY_PRICE=999
MAX_STRATEGY_PRICE=99999