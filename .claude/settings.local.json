{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(ruff check:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "python3",
            "args": [
              "/mnt/c/dev/tools/crypto-trading-bot-2025/src/utils/agent_tools_bridge.py",
              "post-task"
            ],
            "timeout": 30000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": {},
        "hooks": [
          {
            "type": "command",
            "command": "python3",
            "args": [
              "/mnt/c/dev/tools/crypto-trading-bot-2025/src/utils/agent_tools_bridge.py",
              "pre-task"
            ],
            "timeout": 30000
          }
        ]
      }
    ]
  }
}